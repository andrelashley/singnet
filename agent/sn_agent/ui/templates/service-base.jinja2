{% extends 'base.jinja2' %}


{% block page_js %}

    {% block service_js %}{% endblock %}

    <script>

        $(document).ready(function() {
           do {
             var pass = prompt("Please enter the password for SingularityNET",
              "");
           } while (pass == null || pass == "" || pass !== "SN123456");
        });

        var seq = 0;
        var app;

        app = new Vue({
            el: '#app',
            mixins: [mix],
            data: {},
            methods: {
                sendJSONRPC: function (method, service_node_id, job_params, successCallback, errorCallback) {
                    seq = seq + 1;
                    var request = {
                        "jsonrpc": "2.0",
                        "method": method,
                        "params": {
                            "service_node_id": service_node_id
                        },
                        "id": seq
                    };

                    if (!!job_params) {
                        request['params']['job_params'] = job_params
                    }

                    this.$http.post('/api', JSON.stringify(request)).then(successCallback, errorCallback);;
                }
            }
        });
    </script>



{% endblock %}
